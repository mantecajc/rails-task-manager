<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>
  <% if @task.completed?  %>
    Done!
  <% else %>
    Waiting...
  <% end %>
</p>

<hr>
<%= link_to "Update this task", edit_task_path(@task)  %>
<%= link_to "Delete", 
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?"} %>
<%= link_to "Back to the list", tasks_path %>
